@model SearchApp.Models.SearchModel
@{
    ViewBag.Title = "Search";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index","Search",FormMethod.Get))
{
    <p> Search: @Html.TextBox("SearchString") <br />   
    @Html.DropDownListFor(m => m.Domain, new SelectList(Model.Domain, "Key", "Value"))
    <input type="submit" value="Filter" /></p>
}


<table>
<head></head>
@for (int i = 0; i < ViewBag.results.Count; i++)
{
    <tr>
        <td><img src=@ViewBag.results[i].imageUrl /></td>
        <td>@ViewBag.results[i].description</td>
        <td>@ViewBag.results[i].type</td>
    </tr>
    <tr><td><br /></td></tr>
}
</table>


